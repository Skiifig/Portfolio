---
import '../styles/global.css';

const { title } = Astro.props;
---

<html lang="fr">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body class="bg-slate-900 text-slate-50 font-sans antialiased min-h-screen flex flex-col">
        <div class="max-w-5xl mx-auto w-full px-6 md:px-12 flex flex-col flex-grow">
            <header class="p-6">
                <nav class="max-w-5xl mx-auto font-bold text-xl tracking-tight">
                    Portfolio
                </nav>
            </header>

            <main class="flex-grow man-w-5xl mx-auto w-full p-6">
                <slot />
            </main>

            <footer class="p-6 text-center text-slate-500 text-sm">
                © 2026 - Conçu avec Astro & React
            </footer>
        </div>
    </body>
</html>